<!DOCTYPE html>
<html>
  <head>
    <title>Justbeeauty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="client">
    <div class='navbar navbar-static-top'>
      <div class='container-fluid'>
        <button class='navbar-toggle' data-target='.navbar-responsive-collapse' data-toggle='collapse' type='button'>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
          <%= link_to 'JustBeauty', products_path, class: 'navbar-brand' %>
        <div class='navbar-collapse collapse navbar-responsive-collapse'>
          <ul class='nav navbar-nav '>
            <li><a href="/products?category_id=1">Produits Capillaire</a></li>
            <li><a href="/products?category_id=2">Accessoires</a></li>
            <li><a href="/products?category_id=3">Maquillages</a></li>
            <li><a href="/products?category_id=4">Tissages</a></li>
            <li><a href="/products?category_id=5">Perruques</a></li>
            <li><%= link_to 'Reservation', new_booking_path %></li>
            <li><%= link_to 'Contact', 'mailto:justbeauty97111@gmail.com ' %></li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">
            <li id="cart"><%= render "layouts/cart" %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% if flash[:notice] || flash[:success] %>
            <div class="flash-notice"><%= flash[:notice] %></div>
            <div class="flash-success"><%= flash[:success] %></div>
          <% end %>

          <%= yield %>
        </div>
      </div>

      <hr>

      <footer>
        <%= show_snippet('footer')%>
      </footer>
    </div>
  </body>
</html>
